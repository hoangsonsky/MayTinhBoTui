<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Number">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/color_for_button_number</item>
        <item name="android:onClick">setOnClickButtonNumber</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Numerator">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/color_for_button_numerator</item>
        <item name="android:onClick">setOnClickButonNumerator</item>
        <item name="android:textColor">#f5f2f2</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Denominator">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/color_for_button_denominator</item>
        <item name="android:onClick">setOnClickButonDenominator</item>
        <item name="android:textColor">#f5f2f2</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Operator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/color_for_button_operator</item>
        <item name="android:onClick">setOnclickOperator</item>
        <item name="android:textSize">25dp</item>
    </style>


</resources>
